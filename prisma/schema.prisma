// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// 必须使用 PostgreSQL，.env 中 DATABASE_URL 需以 postgresql:// 或 postgres:// 开头
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户系统表
model Admin {
  id        String   @id @default(uuid())
  password  String   // 默认: admin888 (加密存储)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("admins")
}

model Teacher {
  id               String   @id @default(uuid())
  username         String   @unique
  password         String   // 加密存储
  createdByAdminId String   @map("created_by_admin_id")
  createdAt        DateTime @default(now()) @map("created_at")
  isActive         Boolean  @default(true) @map("is_active")

  students    Student[]
  assignments Assignment[]

  @@map("teachers")
}

model Student {
  id                String   @id @default(uuid())
  username          String   @unique
  password          String   // 加密存储
  createdByTeacherId String  @map("created_by_teacher_id")
  createdAt         DateTime @default(now()) @map("created_at")
  isActive          Boolean  @default(true) @map("is_active")
  deletedAt         DateTime? @map("deleted_at")

  teacher           Teacher  @relation(fields: [createdByTeacherId], references: [id])
  assignments       Assignment[]
  examReports       ExamReport[]
  wrongBooks        WrongBook[]
  wrongQuestions    WrongQuestion[]

  @@map("students")
}

model Assignment {
  id        String   @id @default(uuid())
  teacherId String   @map("teacher_id")
  studentId String   @map("student_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")

  teacher   Teacher  @relation(fields: [teacherId], references: [id])
  student   Student  @relation(fields: [studentId], references: [id])

  @@map("assignments")
}

// 学习系统表（与用户系统隔离）
model ExamReport {
  id          String   @id @default(uuid())
  studentId   String   @map("student_id") // 仅逻辑关联，不强制外键约束
  subject     String   // 大学语文/大学英语/高等数学/计算机基础
  selectedPath Json    @map("selected_path") // 存储选择路径
  questions   Json     // 存储题目数据
  answers     Json     // 存储学生答案
  score       Int      // 总分 0-100
  durationSeconds Int?  @map("duration_seconds") // 实际答题时长（秒）
  createdAt   DateTime @default(now()) @map("created_at")

  student     Student? @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@map("exam_reports")
}

// AI错题本表
model WrongBook {
  id        String   @id @default(uuid())
  studentId String   @map("student_id")
  name      String   // 错题本名称
  subject   String?  // 学科：'chinese' | 'english' | 'math' | 'computer' | null
  parentId  String?  @map("parent_id") // 父错题本ID，null表示在学科根目录下
  sortOrder Int      @default(0) @map("sort_order") // 排序序号
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  student   Student        @relation(fields: [studentId], references: [id], onDelete: Cascade)
  questions WrongQuestion[]
  parent    WrongBook?     @relation("WrongBookHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children  WrongBook[]     @relation("WrongBookHierarchy")

  @@map("wrong_books")
  @@index([studentId, subject, parentId, sortOrder])
}

model WrongQuestion {
  id          String    @id @default(uuid())
  studentId   String    @map("student_id")
  wrongBookId String?   @map("wrong_book_id") // null 表示未归类
  name        String    // 错题名称（知识点）
  content     String    // 题目完整文本
  subject     String?   // 学科：'chinese' | 'english' | 'math' | 'computer' | null
  sortOrder   Int       @default(0) @map("sort_order") // 错题本内排序
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  student   Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
  wrongBook WrongBook? @relation(fields: [wrongBookId], references: [id], onDelete: SetNull)

  @@map("wrong_questions")
  @@index([studentId, subject, wrongBookId, sortOrder])
}
